@model PersonalProfile

@{
    DateTimeVM dateTimeVM = new DateTimeVM
            {
                Email = ViewBag.Email,
                Id = ViewBag.Id,
                DateCheckOut = ViewBag.DateCheckOut,
                ImagePath = ViewBag.ImagePath,
                MonthName = ViewBag.MonthName,
                RoomName = ViewBag.RoomName,
                Price = ViewBag.Price,
                CheckOut = Convert.ToDateTime(ViewBag.DateCheckOut),
                CheckIn = DateTime.Now,
                Days = (Convert.ToDateTime(ViewBag.DateCheckOut) - DateTime.Now).Days,
                RoomCount = (int)ViewBag.RoomCount,
            };
}

<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <partial name="_AisdeInnerLayout" , model="dateTimeVM" />
        </div>
    </div>


    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                Personal details
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">

                    <form asp-action="CreateProfile" asp-controller="Home">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="Title" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Title" class="form-control form-control-sm" type="text" placeholder="Title" aria-label=".form-control-sm example">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="FirstName" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control form-control-sm" type="text" placeholder="First Name" aria-label=".form-control-sm example">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="LastName" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control form-control-sm" type="text" placeholder="Last Name" aria-label=".form-control-sm example">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="Sex" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Sex" class="form-control form-control-sm" type="text" placeholder="Sex" aria-label=".form-control-sm example">
                                <span asp-validation-for="Sex" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="DateOfBirth" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="DateOfBirth" class="form-control form-control-sm" type="text" placeholder="Date Of Birth" aria-label=".form-control-sm example">
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="Occupation" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9  ">
                                <input asp-for="Occupation" class="form-control form-control-sm" type="text" placeholder="Occupation" aria-label=".form-control-sm example">
                                <span asp-validation-for="Occupation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label asp-for="Phone" class="col-form-label"></label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Phone" class="form-control form-control-sm" type="text" placeholder="Phone" aria-label=".form-control-sm example">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-secondary float-end" />
                        </div>
                    </form>

                </blockquote>
            </div>
        </div>
    </div>
</div>
<div class="row pt-3">
    <div class="col-md-4">
        <div class="row">
            <partial name="_PriceSummary" , model="dateTimeVM" />
        </div>
    </div>
</div>

